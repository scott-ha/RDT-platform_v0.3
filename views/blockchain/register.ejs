<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <% include ../common/head %>
</head>
<body id="page-top">
  <header class="masthead">
    <div class="container h-100">
      <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
          <h2 class="text-uppercase text-rdtblue font-weight-bold">Register</h2>
          <p class="text-rdtbody mb-3"><%= session%></p>
          <p class="text-rdtbody mb-3"><%= user_name%></p>
        </div>
        <div class="col-lg-12 align-self-baseline">
          <form action="/users/reg" method="POST" enctype="application/x-www-form-urlencoded">
            <input type="text" name="username" required="required" />
            <input type="text" name="password" required="required" />
            <button class="btn btn-rdt btn-xl" type="submit">Register</button>
          </form>
        </div>
      </div>
    </div>
  </header>
  <% include ../common/nav %>

  <!-- Contact Section -->
  <% include ../common/contact %>

  <!-- Footer -->
  <% include ../common/footer %>
</html>
