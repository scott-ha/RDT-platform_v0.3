<!DOCTYPE html>
<html>

<head>
  <title>
    <%= title %>
  </title>
  <% include ../common/head %>
</head>
<body id="page-top">
  <% include ../common/nav %>
  <header class="masthead">
    <div class="container h-100">
      <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
          <h2 class="text-uppercase text-rdtblue font-weight-bold">Wallet save</h2>
          <p class="text-rdtbody mb-3"><%= session%></p>
          <p class="text-rdtbody mb-3"><%= user_name%></p>
        </div>
        <div class="col-lg-12 align-self-baseline">
          <form action="/wallet/save" method="POST" enctype="application/x-www-form-urlencoded">
            <label>private key:</label>
            <textarea name="pri_key" id="pri_key" rows="10" class="form-control" readonly><%= pri_key %></textarea>
            <br />
            <label>public key:</label>
            <textarea name="pub_key" id="pub_key" rows="5" class="form-control" readonly><%= pub_key %></textarea>
            <button class="btn btn-rdt btn-xl" type="submit">SAVE</button>
          </form>
        </div>
      </div>
    </div>
  </header>


  <!-- Contact Section -->
  <% include ../common/contact %>

  <!-- Footer -->
  <% include ../common/footer %>

</html>
